<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/deck_name_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Lorem ipsum dollor sit amet, consectetur adipiscing elit"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/card_count_view"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toggle_selection_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="48dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_item_deck_selection_selected" />

    <TextView
        android:id="@+id/card_count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="28"
        app:layout_constraintBottom_toTopOf="@+id/language_from_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/decorator_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/cards"
        app:layout_constraintBaseline_toBaselineOf="@+id/card_count_view"
        app:layout_constraintStart_toEndOf="@+id/card_count_view" />

    <TextView
        android:id="@+id/hidden_card_count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="14"
        app:layout_constraintBaseline_toBaselineOf="@+id/decorator_cards"
        app:layout_constraintStart_toEndOf="@+id/decorator_cards" />

    <TextView
        android:id="@+id/decorator_hidden_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/of_them_is_hidden"
        app:layout_constraintBaseline_toBaselineOf="@+id/hidden_card_count_view"
        app:layout_constraintStart_toEndOf="@+id/hidden_card_count_view" />

    <!---->

    <TextView
        android:id="@+id/language_from_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="English"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/decorator_language_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="â†’"
        app:layout_constraintBaseline_toBaselineOf="@+id/language_from_view"
        app:layout_constraintStart_toEndOf="@+id/language_from_view" />

    <TextView
        android:id="@+id/language_to_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Russian"
        app:layout_constraintBaseline_toBaselineOf="@+id/decorator_language_arrow"
        app:layout_constraintStart_toEndOf="@+id/decorator_language_arrow" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toggle_selection_button"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>